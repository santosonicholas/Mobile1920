<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FinishFragment"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/unlocked_endings"
            android:textAlignment="center"
        />

        <Button
            android:id="@+id/bad_ending_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bad_finish"
            android:enabled="false"/>

        <Button
            android:id="@+id/normal_ending_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/normal_finish"
            android:enabled="false"/>

        <Button
            android:id="@+id/best_ending_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/best_finish"
            android:enabled="false"/>


    </LinearLayout>

</layout>